 

<EditForm Model="book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="title">Title:</label>
        <InputText id="title" @bind-Value="book.Title" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="barcode">Author:</label>
        <InputText id="barcode" @bind-Value="book.Author" class="form-control"></InputText>
    </div>
    <div class="form-group">
        <label for="price">Id:</label>
        <InputNumber id="price" @bind-Value="book.Id" class="form-control"></InputNumber>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</EditForm>


@code {

    [Parameter]
    public Book book { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

}
